<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@mipmap/welcome"
    android:id="@+id/namelayout"
    tools:ignore="DuplicateIds">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/rid"
        android:hint="id(ex: 14501010)"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#A6A6A6"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/passwd"
        android:hint="password"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#A6A6A6"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/passwd2"
        android:hint="confirm"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#A6A6A6"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/name"
        android:hint="name"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#A6A6A6"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/phone"
        android:hint="phone(010-0000-0000)"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#A6A6A6"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/club"
        android:hint="club(동아리)"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#A6A6A6"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/email"
        android:hint="email(xxxxxx@nate.com)"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#A6A6A6"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/grade"
        android:hint="학년 ex) 3"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#A6A6A6"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/register1"
        android:text="회원가입"
        android:onClick="RegisterOk"
        android:textColor="#FFF"
        android:background="@drawable/loginpagebutton"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/cancel"
        android:text="취소"
        android:onClick="Cancel"
        android:textColor="#FFF"
        android:background="@drawable/loginpagebutton"
        android:layout_gravity="center_horizontal" />




</LinearLayout>











